html
  head
    title Nana CodersX
    link(id="favicon", rel="icon", href="https://cdn.glitch.com/1eeeaa03-4c95-4acc-925a-ac933fed2ce6%2FcodersX.png?v=1587615408346")
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css', integrity='sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p', crossorigin='anonymous')
    link(rel="stylesheet", href="/style.css")
    link(rel="stylesheet", href="/pageUser.css")
    block scripts
      script(src='/jquery.js')
  body
   .compo 
    nav.navbar.navbar-expand-lg.navbar-light(style='background-color: #e3f2fd;')
      img.logo(src='/assets/img/logo@256.png')
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item.active
            a.nav-link(href='#')
              | Home 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='/user') user
          li.nav-item
            a.nav-link(href='/book') book
          li.nav-item
            a.nav-link(href='/transaction') transaction
      i.fas.fa-shopping-cart
        span.text-primary.badge.badge-info (#{count ? count : 0})
      if(user)
        img.avatar(alt='Card image cap', src=`${user.avatar}`)
        a(href='/user/editprofile')= user.username
    h1= message
    form.search-form(action='/user/search' method='get')
     input(type='text' name='search' placeholder='Search user ...')
     button Search
    .row
     .col-4
      ul.list-group
       each user in users
          li.list-group-item.item-user= user.username
           a(href=`/user/view/${user.id}`) view
     .col-8     
    if(noMatch !== underfined)
     p= noMatch
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
